<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoolCars.MAUI.MainPage"
             Title="Cool Cars">

    <Grid RowDefinitions="Auto,*" Padding="10">
        <Button 
            Grid.Row="0"
            Text="Load Cars" 
            Clicked="OnLoadCarsClicked"
            Margin="0,10,0,10"
            HorizontalOptions="Center" />
            
        <ListView 
            Grid.Row="1"
            x:Name="CarsListView"
            ItemsSource="{Binding}"
            HasUnevenRows="True"
            SeparatorVisibility="Default"
            SeparatorColor="LightGray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
                            <Label 
                                Grid.Row="0" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="{Binding Name}" 
                                FontSize="20" 
                                FontAttributes="Bold"
                                TextColor="DarkBlue"
                                Margin="0,0,0,5" />
                                
                            <Image 
                                Grid.Row="1" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Source="{Binding ImageUrl}" 
                                Aspect="AspectFill"
                                HeightRequest="200"
                                Margin="0,0,0,10" />
                                
                            <StackLayout Grid.Row="2" Grid.Column="0" Spacing="5">
                                <Label Text="Engine Specs:" FontAttributes="Bold" />
                                <Label Text="{Binding EngineSpecs}" />
                                
                                <Label Text="Price:" FontAttributes="Bold" Margin="0,5,0,0" />
                                <Label Text="{Binding Price}" />
                            </StackLayout>
                            
                            <StackLayout Grid.Row="2" Grid.Column="1" Spacing="5">
                                <Label Text="Performance:" FontAttributes="Bold" />
                                <Label Text="{Binding Acceleration_0_100, StringFormat='0-100 km/h: {0}'}" />
                                <Label Text="{Binding Acceleration_0_200, StringFormat='0-200 km/h: {0}'}" />
                                <Label Text="{Binding QuarterMileTime, StringFormat='Quarter Mile: {0}'}" />
                                <Label Text="{Binding TopSpeed, StringFormat='Top Speed: {0}'}" />
                            </StackLayout>
                            
                            <BoxView 
                                Grid.Row="3" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HeightRequest="1"
                                Color="LightGray"
                                Margin="0,10,0,0" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
