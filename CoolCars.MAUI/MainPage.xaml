<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoolCars.MAUI.MainPage"
             Title="Cool Cars"
             BackgroundColor="#f0f0f0">

    <Grid RowDefinitions="Auto,*" Padding="10">
        <HorizontalStackLayout Grid.Row="0" HorizontalOptions="Center" Spacing="20" Margin="0,10,0,10">
            <Button 
                Text="Load Cars" 
                Clicked="OnLoadCarsClicked"
                BackgroundColor="#1E88E5"
                TextColor="White"
                FontAttributes="Bold"
                Padding="15,10" />
            
            <Button 
                Text="Add Car" 
                Clicked="OnAddCarClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontAttributes="Bold"
                Padding="15,10" />  
        </HorizontalStackLayout>
            
        <ListView 
            Grid.Row="1"
            x:Name="CarsListView"
            ItemsSource="{Binding}"
            HasUnevenRows="True"
            SeparatorVisibility="Default"
            SeparatorColor="#e0e0e0"
            BackgroundColor="Transparent"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="12" Margin="0,8" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" BackgroundColor="White">
                            <Label 
                                Grid.Row="0" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="{Binding Name}" 
                                FontSize="22" 
                                FontAttributes="Bold"
                                TextColor="#1A237E"
                                Margin="0,0,0,8" />
                            
                            <Image 
                                Grid.Row="1" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Source="{Binding ImageUrl}" 
                                Aspect="AspectFill"
                                HeightRequest="200"
                                Margin="0,0,0,12" />
                            
                            <StackLayout Grid.Row="2" Grid.Column="0" Spacing="6" Margin="0,0,5,0" Padding="10" BackgroundColor="#F5F5F5">
                                <Label Text="Engine Specs:" FontAttributes="Bold" TextColor="#424242" FontSize="16" />
                                <Label Text="{Binding EngineSpecs}" TextColor="#616161" />
                                
                                <Label Text="Price:" FontAttributes="Bold" TextColor="#424242" FontSize="16" Margin="0,8,0,0" />
                                <Label Text="{Binding Price}" TextColor="#616161" FontAttributes="Bold" />
                            </StackLayout>
                        
                            <StackLayout Grid.Row="2" Grid.Column="1" Spacing="6" Margin="5,0,0,0" Padding="10" BackgroundColor="#F5F5F5">
                                <Label Text="Performance:" FontAttributes="Bold" TextColor="#424242" FontSize="16" />
                                <Label Text="{Binding Acceleration_0_100, StringFormat='0-100 km/h: {0}'}" TextColor="#616161" />
                                <Label Text="{Binding Acceleration_0_200, StringFormat='0-200 km/h: {0}'}" TextColor="#616161" />
                                <Label Text="{Binding QuarterMileTime, StringFormat='Quarter Mile: {0}'}" TextColor="#616161" />
                                <Label Text="{Binding TopSpeed, StringFormat='Top Speed: {0}'}" TextColor="#616161" />
                            </StackLayout>
                            
                            <StackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10" Margin="0,12,0,0">
                                <Button Text="ðŸ”Š Engine Sound" 
                                        BackgroundColor="#FF5722"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        CommandParameter="{Binding Name}"
                                        Clicked="OnPlaySoundClicked"
                                        HorizontalOptions="FillAndExpand" />
                                <Button Text="ðŸŽ¬ Watch Video" 
                                        BackgroundColor="#2196F3"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        CommandParameter="{Binding Name}"
                                        Clicked="OnPlayVideoClicked"
                                        HorizontalOptions="FillAndExpand" />
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
